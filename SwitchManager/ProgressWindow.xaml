<Window x:Class="SwitchManager.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwitchManager"
        xmlns:coll="clr-namespace:SwitchManager.nx.library"
        xmlns:ui="clr-namespace:SwitchManager.ui"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Downloads">

  <Window.Resources>
  </Window.Resources>

  <Grid Margin="0">
    <Button x:Name="Button_Clear" Click="Button_Clear_Click" Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="1">Clear Completed Downloads</Button>
    <StackPanel x:Name="DownloadsPanel" Margin="25" Height="Auto" Width="Auto" Grid.Row="1" Grid.Column="0" Grid.RowSpan="5">
    </StackPanel>
  </Grid>
</Window>
